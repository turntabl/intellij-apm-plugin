<idea-plugin>
    <id>io.turntabl.profiler</id>
    <name>JFR Profiler</name>
    <vendor email="enock.boadi-ansah@turntabl.io" url="http://www.turntabl.io">Turntabl</vendor>
    <version>1.0.0</version>
    <description><![CDATA[
        Java application profiler plugin for intellij
    ]]></description>


    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <idea-version since-build="163" until-build="211.*"/>

    <depends>com.intellij.modules.java</depends>


    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="NewRelic Java Profiler" secondary="false" anchor="bottom" factoryClass="io.turntabl.NewRelicJavaProfiler"
                    icon="/icons/play_icon.png"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="io.turntabl.action.RunWithJavaProfilerAction" class="io.turntabl.action.RunWithJavaProfilerAction" text="Run With NewRelic Profiler">
            <add-to-group group-id="RunMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
